<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/favorite_background"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mode="normal"
        app:dragEdge="right">

        <ImageView
            android:id="@+id/favorite_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            app:tint="#ff0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="남구 감만동"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/favorite_very_bad"
                android:orientation="vertical"
                android:paddingVertical="5dp">

                <ImageView
                    android:id="@+id/location_status_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_good"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/location_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="매우 나쁨"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</LinearLayout>