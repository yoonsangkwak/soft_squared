<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:padding="10dp"
    android:orientation="horizontal"
    tools:context=".DustDetailFragment">

    <ImageView
        android:id="@+id/detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미세먼지" />

        <ImageView
            android:id="@+id/detail_first_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_good" />

        <TextView
            android:id="@+id/detail_first_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보통" />

        <TextView
            android:id="@+id/detail_first_conc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48 ㎍/㎥" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초미세먼지" />

        <ImageView
            android:id="@+id/detail_second_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_good" />

        <TextView
            android:id="@+id/detail_second_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보통" />

        <TextView
            android:id="@+id/detail_second_conc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 ㎍/㎥" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_third_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이산화질소" />

        <ImageView
            android:id="@+id/detail_third_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_good" />

        <TextView
            android:id="@+id/detail_third_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양호" />

        <TextView
            android:id="@+id/detail_third_conc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.033 ppm" />
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_next" />

</LinearLayout>
